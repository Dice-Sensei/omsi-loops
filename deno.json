{
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "jsx": "precompile",
    "jsxImportSource": "solid-js",
    "noImplicitOverride": true,
    "noImplicitThis": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-namespace", "no-var"]
    }
  },
  "fmt": {
    "singleQuote": true,
    "semiColons": true,
    "indentWidth": 2,
    "lineWidth": 120
  },
  "license": "MIT",
  "tasks": {
    "dev": {
      "command": "vite",
      "description": "Run the development server"
    },
    "build": {
      "command": "vite build",
      "description": "Build the application"
    },
    "preview": {
      "command": "vite preview",
      "description": "Preview the application"
    },
    "fmt": {
      "command": "deno fmt",
      "description": "Format all the files in the project"
    }
  }
}
